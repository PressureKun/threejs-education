{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "jquery": true
    },
    "extends": "eslint:recommended",
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaVersion": 8,
        "requireConfigFile": false,
        "sourceType": "module"
    },
    "rules": {
        "failOnError": "off",
        "indent": [
            "off"
        ],
        "linebreak-style": [
            "off"
        ],
        "quotes": [
            "off"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-useless-escape": [
            "off"
        ]
    }
}